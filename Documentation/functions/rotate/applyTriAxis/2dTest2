xOld = 0.541;  
yOld = 0.524;  

xHori = 0.866;  
yHori = 0.500;  

xLine1 = xHori;
yLine1 = yHori;

xLine2 = -yHori;
yLine2 = xHori;

yHoriExt = yLine1 - (xLine1 - xOld) / xLine1 * yLine1;  
xVertExt = xLine2 - (yLine2 - yOld) / yLine2 * xLine2;  

xNew = (xOld - xVertExt) * yLine2;  
yNew = (yOld - yHoriExt) * xLine1;  

print xNew;
print yNew;


xNew = 0.731;
yNew = 0.183;  

